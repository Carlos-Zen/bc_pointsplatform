<script type="text/javascript">
function load() {
    document.getElementById('errMessage').innerHTML = "";    
}
function displayResult() {
    var x;
    if (window.event) { // IE8 以及更早版本
        x = event.keyCode;
    } else if (event.which) { // IE9/Firefox/Chrome/Opera/Safari
        x = event.which;
    }
    keychar = String.fromCharCode(x);
    if (x == "13") {
        $("#register").click();
    }
}
$(function() {
    $("#register").click(function() {
        load();
        var $txtUserName = $('#username'),
        username = $.trim($txtUserName.val()),
        $txtUserPwd = $('#password'),
        password = $.trim($txtUserPwd.val()),
        $txtUserRePwd = $('#passwordRe'),
        passwordRe = $.trim($txtUserRePwd.val());
        if (username.length == 0) {
            document.getElementById('errMessage').innerHTML = "用户名不能为空";
            $txtUserName.focus();
            return false;
        }
        if (password.length == 0) {
            document.getElementById('errMessage').innerHTML = "密码不能为空";
            $txtUserPwd.focus();
            return false;
        }
        if (passwordRe.length == 0) {
            document.getElementById('errMessage').innerHTML = "确认密码不能为空";
            $txtUserRePwd.focus();
            return false;
        }
        if (password !== passwordRe) {
            document.getElementById('errMessage').innerHTML = "两次密码不一致";
            $txtUserPwd.focus();
            return false;
        }
        var data = {
            "uname": username,
            "upwd": password
        };
        $.ajax({
            url: '/register',
            type: 'post',
            data: data,
            dataType: 'json',
            success: function(data) {
                var ret = $.parseJSON(data);
                if (ret.code == 200) {
                    alert("注册成功,请登录");
                    location.href = 'login';
                } else {
                    document.getElementById('errMessage').innerHTML = ret.tips;
                }
            },
            error: function(jqXHR, textStatus, errorThrown) {
                //alert('error ' + textStatus + " " + errorThrown);
                document.getElementById('errMessage').innerHTML = errorThrown;
            }
            // success: function(data,status){ 
