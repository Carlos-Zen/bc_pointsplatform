<script type="text/javascript">
function load() {
    $("#query").click();
}

//二级联动显示机构发行的积分
function clickIns() {  
    var ins = $("#institution").val();
    var data = {
        "ins": ins
    };
    var asset = document.getElementById("asset");
    $.ajax({          
        url: '/queryAsset',
        type: 'post',
        data: data,
        dataType: 'json',
        success: function(data) {
            var ret = $.parseJSON(data);
            if (ret.code == 200) {
                var assetList = $.parseJSON(ret.tips);
                //清空数组  
                asset.length = 0;
                var option = new Option("选择积分");
                asset.add(option);
                for (var i = 1; i <= assetList.length; i++) {
                    var xText = assetList[i - 1].asset;
                    var option = new Option(xText);
                    asset.add(option);
                }
            } else {
                //清空数组  
                asset.length = 0;
                var option = new Option("选择积分");
                asset.add(option);
                //alert("账户查询失败，错误：" + ret.tips);
            }
        },
        error: function(jqXHR, textStatus, errorThrown) {
            //清空数组  
            asset.length = 0;
            var option = new Option("选择积分");
            asset.add(option);
            //alert("账户查询失败，错误：" + ret.tips);
        }
    });  
}

$(function() {

    //账户申请
    $("#add").click(function() {
        var $txtInstitution = $('#institution'),
        ins = $txtInstitution.val(),
        $txtAsset = $('#asset'),
        asset = $txtAsset.val();
        if (ins == "选择机构") {
            //alert("请选择机构");
            $txtInstitution.focus();
            return false;
        }
        if (asset == "选择积分") {
            //alert("请选择积分");
            $txtAsset.focus();
            return false;
        }                    
        var data = {
            "ins": ins,
            "asset": asset
        };
        $.ajax({
            url: '/userAddress',
            type: 'post',
            data: data,
            dataType: 'json',
            success: function(data) {
                var ret = $.parseJSON(data);
                if (ret.code == 200) {
                    alert("账户申请成功");
                    $("#query").click();
                } else {
                    alert("账户申请失败，错误：" + ret.tips);
                }
            },
            error: function(jqXHR, textStatus, errorThrown) {
                alert("账户申请失败，错误：" + errorThrown);
            }
        });
    });

    //账户查询显示
    $("#query").click(function() {
        var data = {
            "username": "test"
        };
        $.ajax({
            url: '/queryAddress',
            type: 'post',
            data: data,
            dataType: 'json',
            success: function(data) {
                var ret = $.parseJSON(data);
                if (ret.code == 200) {
                    var vv = "";
                    var addressList = $.parseJSON(ret.tips);
                    for (i = 0; i < addressList.length; i++) {
                        vv = vv + "<tr><td>" + addressList[i].address + 
                                  "</td><td>" + addressList[i].institution + 
                                  "</td><td>" + addressList[i].asset +
                                  "</td><td>" + addressList[i].time +
                                  "</td></tr>";
                    }
                    document.getElementById("context").innerHTML = vv;
                } else {
                    //alert("账户查询失败，错误：" + ret.tips);
                }
            },
            error: function(jqXHR, textStatus, errorThrown) {
                //alert("账户查询失败，错误：" + errorThrown);
            }
        });
    });
});
</script>